            z-index: 0;
            opacity: 0.3;
        }

    .user-message, .bot-message {
        display: flex;
        gap: 8px;
        margin-bottom: 4px;
        max-width: 80%;
        animation: fadeIn 0.3s ease-out;
        position: relative;
        z-index: 1;
    }


    .user-message {
        align-self: flex-end;
        flex-direction: row-reverse;
    }

    .bot-message {
        align-self: flex-start;
    }

    .bot-avatar {
