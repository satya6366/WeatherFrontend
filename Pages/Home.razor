        }

    /* Chat Input */
    .chat-input {
        padding: 10px 14px;
        border-top: 1px solid #eee;
        background: white;
        position: relative;
    }

        .chat-input::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, rgba(0, 131, 176, 0.3), transparent);
        }

        /* Make input text smaller */
        .chat-input :deep(.mud-input) {
            font-size: 0.85rem;
        }

        .chat-input :deep(.mud-input-outlined) {
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .chat-input :deep(.mud-input-outlined:focus-within) {
            box-shadow: 0 0 0 2px rgba(0, 131, 176, 0.2);
        }



    .typing-indicator {
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 2px 4px;
    }

        .typing-indicator span {
            width: 7px;
            height: 7px;
            border-radius: 50%;
            background: #64b5f6;
            display: inline-block;
            animation: typingBounce 1.4s infinite ease-in-out both;
        }

